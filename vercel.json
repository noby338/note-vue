{
    "build": {
        "env": {
            "LD_LIBRARY_PATH": "/usr/local/lib",
            "LIBRARY_PATH": "/usr/local/lib"
        },
        "commands": [
            "wget https://www.openssl.org/source/openssl-1.1.1k.tar.gz",
            "tar -xzf openssl-1.1.1k.tar.gz",
            "cd openssl-1.1.1k",
            "./config --prefix=/usr/local",
            "make",
            "make install",
            "cd .."
        ]
    }
}